{
  "name": "Jira Burndown Chart",
  "description": "A Jira Burndown Chart with Vue.js Chrome Web Extension",
  "version": null,
  "permissions": [
    "https://*/",
    "storage",
    "activeTab"
  ],
  "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'",
  "manifest_version": 2,
  "icons": {
    "16": "icons/burn_16.png",
    "32": "icons/burn_32.png",
    "128": "icons/burn_128.png"
  },
  "browser_action": {
    "default_title": "Jira Burn Chart",
    "default_icon": "icons/burn_16.png"
  },
  "background": {
    "scripts": ["background.js"]
  }
}
